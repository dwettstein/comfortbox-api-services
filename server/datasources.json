{
  "db": {
    "name": "db",
    "connector": "memory"
  },
  "ParticleAPI": {
    "name": "ParticleAPI",
    "baseURL": "https://api.particle.io/",
    "crud": false,
    "connector": "rest",
    "options": {
      "headers": {
        "accept": "application/json",
        "content-type": "application/json",
        "Authorization": "Bearer 000000_enter_Particle_token_here_0000000"
      }
    },
    "operations": [
      {
        "template": {
          "method": "POST",
          "url": "https://api.particle.io/v1/devices/events",
          "form": {
            "name": "{particle_id}/display",
            "data": "{text}"
          },
          "responsePath": "$"
        },
        "functions": {
          "displayText": ["particle_id", "text"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "https://api.particle.io/v1/devices/events",
          "form": {
            "name": "{particle_id}/led",
            "data": "{colorsInBase64}"
          },
          "responsePath": "$"
        },
        "functions": {
          "displayLed": ["particle_id", "colorsInBase64"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "https://api.particle.io/v1/devices/{particle_id}/set_interval",
          "form": {
            "arg": "{interval}"
          },
          "responsePath": "$"
        },
        "functions": {
          "setInterval": ["particle_id", "interval"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "https://api.particle.io/v1/devices/{particle_id}/set_host",
          "form": {
            "arg": "{host}:{port}"
          },
          "responsePath": "$"
        },
        "functions": {
          "setMqttHost": ["particle_id", "host", "port"]
        }
      }
    ]
  },
  "KairosDB": {
    "name": "KairosDB",
    "baseURL": "http://localhost:8080/",
    "crud": false,
    "connector": "rest",
    "options": {
      "headers": {
        "accept": "application/json",
        "content-type": "application/json"
      }
    },
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "http://localhost:8080/api/v1/metricnames",
          "responsePath": "$.results.*"
        },
        "functions": {
          "metricnames": []
        }
      }
    ]
  }
}
