{
  "name": "comfortbox",
  "plural": "comfortboxes",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "particle_id": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {
    "displayText": {
      "isStatic": false,
      "accepts": [
        {
          "arg": "text",
          "type": "string",
          "required": true,
          "description": "Text to display on the ComfortBox"
        }
      ],
      "returns": {
        "arg": "response",
        "type": "string",
        "root": true,
        "description": "Response from Particle API"
      },
      "description": "Display a message on a ComfortBox",
      "http": [
        {
          "verb": "post"
        }
      ]
    },
    "displayLed": {
      "isStatic": false,
      "accepts": [
        {
          "arg": "colorsInBase64",
          "type": "string",
          "required": true,
          "description": "Colors to display on the ComfortBox formatted in Base64"
        }
      ],
      "returns": {
        "arg": "response",
        "type": "string",
        "root": true,
        "description": "Response from Particle API"
      },
      "description": "Display various LED colors on a ComfortBox",
      "http": [
        {
          "verb": "post"
        }
      ]
    },
    "displayHexColor": {
      "isStatic": false,
      "accepts": [
        {
          "arg": "colorInHex",
          "type": "string",
          "required": true,
          "description": "Color to display on the ComfortBox formatted in HEX"
        }
      ],
      "returns": {
        "arg": "response",
        "type": "string",
        "root": true,
        "description": "Response from Particle API"
      },
      "description": "Display a single LED color in HEX on a ComfortBox",
      "http": [
        {
          "verb": "post"
        }
      ]
    },
    "displayData": {
      "isStatic": false,
      "accepts": [
      ],
      "returns": {
        "arg": "response",
        "type": "string",
        "root": true,
        "description": "Response from Particle API"
      },
      "description": "Display the sensors data on the ComfortBox",
      "http": [
        {
          "verb": "get"
        }
      ]
    },
    "setInterval": {
      "isStatic": false,
      "accepts": [
        {
          "arg": "interval",
          "type": "string",
          "required": true,
          "description": "Interval for sending messages from the ComfortBox to the MQTT queue"
        }
      ],
      "returns": {
        "arg": "response",
        "type": "string",
        "root": true,
        "description": "Response from Particle API"
      },
      "description": "Change the interval for sending messages from the ComfortBox to the MQTT queue",
      "http": [
        {
          "verb": "post"
        }
      ]
    },
    "setMqttHost": {
      "isStatic": false,
      "accepts": [
        {
          "arg": "host",
          "type": "string",
          "required": true,
          "description": "IP or hostname of the MQTT message queue"
        },
        {
          "arg": "port",
          "type": "string",
          "required": true,
          "description": "Port of the MQTT message queue"
        }
      ],
      "returns": {
        "arg": "response",
        "type": "string",
        "root": true,
        "description": "Response from Particle API"
      },
      "description": "Change the MQTT host used by a ComfortBox",
      "http": [
        {
          "verb": "post"
        }
      ]
    },
    "getMetricNames": {
      "isStatic": false,
      "accepts": [
      ],
      "returns": {
        "arg": "response",
        "type": "string",
        "root": true,
        "description": "Response from KairosDB API"
      },
      "description": "Returns a list of all metric names containing this box's Particle id.",
      "http": [
        {
          "verb": "get"
        }
      ]
    }
  }
}
